<body>
    <div class="container">
        <h1>Calculadora Simples</h1>

        <label for="n1">Primeiro Valor:</label>
        <input type="number" id="n1">
        
        <label for="n2">Segundo Valor:</label>
        <input type="number" id="n2">
        
        <button onclick="calcularSoma()">Somar</button>

        <p id="output">Resultado:</p>
    </div>

    <script>
        function calcularSoma() {

            const num1 = Number(document.getElementById('n1').value);
            const num2 = Number(document.getElementById('n2').value);
  
            const total = num1 + num2;

            document.getElementById('output').textContent = `Resultado: ${total}`;
        }
    </script>
